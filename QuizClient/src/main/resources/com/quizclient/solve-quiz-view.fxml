<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quizclient.controller.SolveQuizController">
  <top>
    <HBox styleClass="header">
      <Label>JAVA QUIZ</Label>
    </HBox>
  </top>
  <center>
    <BorderPane>
      <top>
        <AnchorPane>
          <HBox alignment="CENTER" styleClass="top" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel" layoutX="370.0" styleClass="title" text="tytul" />
          </HBox>
          <Label fx:id="timeLabel"  styleClass="time" text="123" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0" />
        </AnchorPane>
      </top>
      <center>
        <BorderPane styleClass="content">
          <top>
            <Label styleClass="question" fx:id="questionLabel" text="pytanie"/>
          </top>
          <left>
            <VBox styleClass="answer-box" fx:id="answersBox"/>
          </left>
          <bottom>
            <AnchorPane>
              <FlowPane AnchorPane.leftAnchor="10" styleClass="action-buttons">
                <Button text="Poprzednie pytanie" disable="true" fx:id="previousQuestionButton" onAction="#onPreviousQuestion"/>
                <Button text="Następne pytanie" fx:id="nextQuestionButton" onAction="#onNextQuestion"/>
              </FlowPane>
              <Button AnchorPane.rightAnchor="10" text="Zakończ quiz" onAction="#onStopQuiz"/>
            </AnchorPane>

          </bottom>
        </BorderPane>
      </center>
    </BorderPane>
  </center>
  <bottom>
    <HBox styleClass="footer">
      <Label styleClass="powered-by">Powered by</Label>
      <Label styleClass="author">Paweł Morawczyński</Label>
    </HBox>
  </bottom>
  <bottom>
    <HBox styleClass="footer">
      <Label styleClass="powered-by">Powered by</Label>
      <Label styleClass="author">Paweł Morawczyński</Label>
    </HBox>
  </bottom>
  <stylesheets>
    <URL value="@styles/solve-quiz-view.css" />
    <URL value="@styles/global.css" />
  </stylesheets>
</BorderPane>
