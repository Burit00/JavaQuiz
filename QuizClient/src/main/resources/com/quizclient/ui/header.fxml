<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml" stylesheets="@../styles/global.css">

  <HBox styleClass="header" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
    <Label>JAVA QUIZ</Label>
  </HBox>

  <VBox styleClass="greetings" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
    <Label fx:id="userGreetingLabel"/>
  </VBox>
  <HBox fx:id="actionButtonsBox"
        alignment="CENTER_RIGHT"
        spacing="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.topAnchor="10"
        AnchorPane.bottomAnchor="10">
    <Button
        fx:id="signInButton"
        styleClass="sign-up-in-button"
    />
  </HBox>
</fx:root>

